<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/station_name"
        android:layout_width="250dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="방송국 명"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_youtube"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="1dp"
        android:layout_toLeftOf="@+id/img_afreeca"
        android:src="@drawable/logo_youtube" />

    <ImageView
        android:id="@+id/img_afreeca"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="1dp"
        android:layout_toLeftOf="@+id/img_twitch"
        android:src="@drawable/logo_afreeca" />

    <ImageView
        android:id="@+id/img_twitch"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_margin="1dp"
        android:src="@drawable/logo_twitch" />

</RelativeLayout>